{
  "name": "saas-app",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:test": "cross-env NODE_ENV=test next dev",
    "build": "next build",
    "start": "next start",
    "prepare": "husky",
    "lint": "next lint --max-warnings=0",
    "lint:tests": "eslint src/tests --max-warnings=10",
    "test": "vitest run",
    "test:ui": "vitest",
    "test:e2e": "npx playwright test --config=playwright.config.ts",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "codex:build": "node codex/generate.js",
    "codex:preview": "npx serve codex-local"
 },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --fix"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@auth/core": "^0.34.3",
    "@prisma/client": "^6.19.0",
    "@types/bcryptjs": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "axios": "^1.12.2",
    "clsx": "^2.1.1",
    "lucide-react": "^0.552.0",
    "next": "15.5.5",
    "next-auth": "^4.24.13",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/cli": "^4.1.14",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "bcryptjs": "^3.0.3",
    "cross-env": "^10.1.0",
    "eslint": "^9.37.0",
    "eslint-config-next": "15.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prisma": "^6.19.0",
    "tailwindcss": "^4.1.14",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
